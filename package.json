{
  "name": "mintunnel",
  "version": "1.0.0",
  "description": "A minimal Electron application",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "repository": "https://github.com/electron/electron-quick-start",
  "keywords": [
    "Electron",
    "quick",
    "start",
    "tutorial",
    "demo"
  ],
  "author": "南京葛南实业有限公司",
  "license": "CC0-1.0",
  "devDependencies": {
    "electron": "^8.1.1",
    "electron-builder": "^22.4.1"
  },
  "build": {
    "appId": "com.leon.tunnel",
    "productName": "Mint隧洞监测系统",
    "copyright": "南京葛南实业有限公司",
    "nsis": {
      "oneClick": false, 
      "allowElevation": true, 
      "allowToChangeInstallationDirectory": true, 
      "installerIcon": "./ant/icons/icon.ico",
      "uninstallerIcon": "./ant/icons/icon.ico",
      "installerHeaderIcon": "./ant/icons/icon.ico", 
      "createDesktopShortcut": true, 
      "createStartMenuShortcut": true,
      "shortcutName": "Mint隧洞监测系统"
    },
    "dmg": {
      "contents": [
        {
          "x": 410,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 130,
          "y": 150,
          "type": "file"
        }
      ]
    },
    "mac": {
      "category": "your.app.category.type"
    },
    "win": {
      "icon": "ant/icons/icon.png",
      "target": [
        {
          "target": "nsis"
        }
      ]
    },
    "extraResources": [
      {
        "from": "ant/hh",
        "to": "../" 
      }
    ]
  }
}
